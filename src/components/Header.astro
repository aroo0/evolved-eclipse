---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import Subscribe from './Subscribe.astro';
---

<header>
	<div class='header__container'>
		<a class='header__logo header__nav-links' href="/">{SITE_TITLE}</a>
	<nav class='header__main-nav'>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/projects-writings">Project/Writings</HeaderLink>
	</nav>
		<nav class='header__social-nav'>
		<HeaderLink href="/">Subscribe</HeaderLink>
		<a href="https://www.w3schools.com">Twitter.</a>
		


	</nav>
	</div>
</header>
<style>
	.header__container {
		display: flex;
		gap: 2rem;
		align-items: center;
		justify-content: space-between;
		margin: 0.5rem auto;
		max-width: 130ch;





	}
	.header__logo {
		text-transform: uppercase;
		font-size: 1.4rem;
		font-weight: 700;
		

	}

	.header__nav-links {
		text-decoration: none;
	}

	.header__main-nav {
		display: flex;
		gap: 1.3rem;
		flex-wrap: wrap;

	}
</style>
